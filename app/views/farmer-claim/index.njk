{% extends './layouts/layout.njk' %}

{% block pageTitle %}Claim funding for a livestock health and welfare review{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Claim funding for a livestock health and welfare review</h1>

    <p>Use this service to claim funding for a livestock health and welfare review.</p>
    <p>Claiming takes about 5 minutes.</p>
    <p>You can also claim funding by phone. Call the Rural Payments Agency on 03000 200 301.</p>

    {{ govukButton({
      classes: "govuk-!-margin-top-2 govuk-!-margin-bottom-8",
      href: "/farmer-claim/login",
      isStartButton: true,
      text: "Start now"
    }) }}
  </div>
</div>
{% endblock %}
