{% extends './layouts/layout.njk' %}

{% block pageTitle %}Confirm the details of your livestock health and welfare review{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/",
	  attributes: {id: "back"}
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Confirm the details of your livestock health and welfare review</h1>

    {{ govukSummaryList({
      rows: listData.rows
    }) }}

    {{ govukRadios(radios) }}

    {{ govukButton({
      text: "Continue",
      href: "#"
    }) }}
  </div>
</div>
{% endblock %}
