{% extends './layouts/layout.njk' %}

{% block pageTitle %}Upload the vet’s invoice - {{ serviceName }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Upload the vet’s invoice</h1>

    <form method="POST" action="/farmer-claim/submit-claim">
      <input type="hidden" name="crumb" value="{{crumb}}"/>
      
      {{ govukFileUpload({
        id: "file-upload-1",
        name: "file-upload-1",
        label: {
            text: "Upload a file"
        },
        hint: {
          text: "Upload a digital copy of the invoice the vet sent you for the review. If you do not have a digital copy, ask the vet to send you one."
        }
      }) }}
      {{ govukButton({
      classes: "govuk-!-margin-top-2 govuk-!-margin-bottom-8",
        text: "Continue"
      }) }}
    </form>
  </div>
</div>
{% endblock %}
