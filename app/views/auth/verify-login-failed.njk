{% extends './layouts/layout.njk' %}

{% block pageTitle %}Sign in{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Login failed</h1>

    <p>If you need a new link you can request a one by clicking on the button below.</p>

    {{ govukButton({
      text: "Request new link to login",
      href: 'login'
    }) }}
  </div>
</div>
{% endblock %}
