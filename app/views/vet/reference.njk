{% extends './layouts/layout.njk' %}

{% block pageTitle %}Enter application reference number{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">Enter the funding application reference number</h1>

        {{ govukInput({
          label: {
            text: "Reference number"
          },
          hint: {
            text: "This is the reference number Defra gave the farmer when they applied"
          },
          classes: "govuk-input--width-10",
          id: "reference",
          name: "reference",
          value: reference,
          errorMessage: errorMessage
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "continue"
          }
        }) }}

      </form>
    </div>
  </div>
{% endblock %}
