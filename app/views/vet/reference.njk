{% extends './layouts/layout.njk' %}

{% block pageTitle %}Enter booking reference number - {{ serviceName }}{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">Enter booking reference number</h1>

        {{ govukInput({
          label: {
            text: "Booking reference number"
          },
          classes: "govuk-input--width-10",
          id: "applicationReference",
          name: "applicationReference",
          value: applicationReference,
          errorMessage: errorMessage
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "continue"
          }
        }) }}

      </form>
    </div>
  </div>
{% endblock %}
