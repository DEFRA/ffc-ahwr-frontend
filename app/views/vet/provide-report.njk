{% extends './layouts/layout.njk' %}

{% block pageTitle %}Give the farmer a written report - {{ serviceName }}{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet/review-report",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Give the farmer a written report</h1>

    <p>You must give the farmer recommendations and actions in a written report.</p>
    <p>You can create a separate review report or you can integrate the recommendations and actions into an existing health and welfare document.</p>
    {{ govukButton({
      classes: "govuk-!-margin-top-2 govuk-!-margin-bottom-8",
      href: "/vet/check-answers",
      text: "Continue"
    }) }}
  </div>
</div>
{% endblock %}
