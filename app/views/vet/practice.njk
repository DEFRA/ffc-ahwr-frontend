{% extends './layouts/layout.njk' %}
{% block pageTitle %}What is the vet practice name? - {{ serviceName }}{% endblock %}
{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet/name",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{ crumb }}"/>
        {{ govukInput({
          label: {
            text: "What is the vet practice name?",
            classes: "govuk-label--l",
            isPageHeading: true
          },
          hint: {
            text: "This has to be the practice the vet was working for at the time of the review"
          },
          classes: "govuk-input-!-width-full",
          id: "practice",
          name: "practice",
          value: practice,
          errorMessage: errorMessage
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "continue"
          }
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
