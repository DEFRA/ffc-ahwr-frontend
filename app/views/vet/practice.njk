{% extends './layouts/layout.njk' %}

{% block pageTitle %}What is the name of vet practice - {{ serviceName }}{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet/name",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">What is the name of the vet practice the vet was working for at the time of the review?</h1>

        {{ govukInput({
          label: {
            text: "Vet practice name"
          },
          classes: "govuk-input-!-width-full",
          id: "practice",
          name: "practice",
          value: practice,
          errorMessage: errorMessage
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "continue"
          }
        }) }}

      </form>
    </div>
  </div>
{% endblock %}
