{% extends './layouts/layout.njk' %}

{% block pageTitle %}Enter name of vet practice{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet/name",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">What is the name of the practice the vet works for?</h1>

        {{ govukInput({
          label: {
            text: "Vet practice name"
          },
          hint: {
            text: "This is the name of the practice where the vet who undertook the visit works"
          },
          classes: "govuk-input--width-10",
          id: "practice",
          name: "practice",
          value: practice,
          errorMessage: errorMessage
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "continue"
          }
        }) }}

      </form>
    </div>
  </div>
{% endblock %}
