{% extends './layouts/layout.njk' %}

{% block pageTitle %}Check the details of the review{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Check the details of the review</h1>
    <form method="POST" autocomplete="off" novalidate="novalidate">
          <input type="hidden" name="crumb" value="{{crumb}}"/>
        {{ govukSummaryList({
          classes: "govuk-!-margin-bottom-9",
          rows: listData.rows
        }) }}

        {{ govukRadios(radios) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
  </div>
</div>
{% endblock %}
