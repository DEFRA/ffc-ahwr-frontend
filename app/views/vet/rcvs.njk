{% extends './layouts/layout.njk' %}

{% block pageTitle %}Enter RCVS number{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet/reference",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">Enter the RCVS number of the vet who undertook the visit</h1>

        {{ govukInput({
          label: {
            text: "RCVS number"
          },
          hint: {
            text: "This is the RCVS number of the vet who undertook the visit"
          },
          classes: "govuk-input--width-10",
          id: "rcvs",
          name: "rcvs",
          value: rcvs,
          errorMessage: errorMessage
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "continue"
          }
        }) }}

      </form>
    </div>
  </div>
{% endblock %}
