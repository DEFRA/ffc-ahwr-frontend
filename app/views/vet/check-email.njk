{% extends './layouts/layout.njk' %}

{% block pageTitle %}Check your email{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet/login",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Check your email</h1>

    <p>We've sent a link to <span id="email">{{email}}</span></p>
    <p>This can take a few minutes to arrive.</p>
    <p>If you don't get an email:</p>

    <ul class="govuk-list govuk-list--bullet">
      <li>check your spam or junk folders</li>
      <li>check you have entered the correct email</li>
      <li><a href="/vet/email">resend the email</a></li>
    </ul>
  </div>
</div>
{% endblock %}
