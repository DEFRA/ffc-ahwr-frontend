{% extends './layouts/layout.njk' %}

{% block pageTitle %}Record submitted - {{ serviceName }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {% if applicationState === 'claimed' %}
      <h1 class="govuk-heading-l">Application reference number is no longer valid.</h1>
    {% else %}
      {{ govukPanel({
        titleText: "Record submitted",
        html: "Reference number<br><strong>" + reference + "</strong>"
      }) }}

      <p class="govuk-body">The record has been submitted.</p>

      <h2 class="govuk-heading-m">What happens next</h2>
      <p class="govuk-body">Weâ€™ve contacted the farmer to tell them they can claim their funding.</p>
      <p class="govuk-body">Invoice the farmer if you have not already done this.</p>
      <h2 class="govuk-heading-m">Contact the Rural Payments Agency</h2>
      <p class="govuk-body">If you have a question about your submission, call the Rural Payments Agency on 03000 200 301.</p>
      <p class="govuk-body">Monday to Friday 8.30am to 5pm, except bank holidays.</p>
      <p><a href="https://www.gov.uk/call-charges" target="_blank">Find out about call charges</a></p>
    {% endif %}
  </div>
</div>
{% endblock %}
