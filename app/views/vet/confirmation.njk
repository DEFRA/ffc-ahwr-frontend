{% extends './layouts/layout.njk' %}

{% block pageTitle %}Record submitted - {{ serviceName }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {% if applicationState === 'claimed' %}
      <h1 class="govuk-heading-l">Application reference number is no longer valid.</h1>
    {% else %}
      {{ govukPanel({
        titleText: "Record submitted",
        html: "Reference number<br><strong>" + reference + "</strong>"
      }) }}

      <p class="govuk-body">The record has been submitted.</p>

      <h2 class="govuk-heading-m">What happens next</h2>
      <p class="govuk-body">Weâ€™ve contacted the farmer to tell them they can claim their funding.</p>
      <p class="govuk-body">Invoice the farmer if you have not already done this.</p>
      <h2 class="govuk-heading-m">Contact the Rural Payments Agency</h2>
      <p class="govuk-body">If you have a question about your submission, contact the Rural Payments Agency:</p>
      <ul class="govuk-list">
        <li>Telephone: 01900 508622</li>
        <li>Monday to Friday, 8:30am to 5pm (except public holidays)</li>
        <li><a class="govuk-link" href="mailto:ruralpayments@defra.gov.uk">ruralpayments@defra.gov.uk</a></li>
      </ul>
      <p class="govuk-body"><a class="govuk-link" href="https://www.gov.uk/call-charges">Find out about call charges</a>.</p>
    {% endif %}
  </div>
</div>
{% endblock %}
