  <div class="govuk-grid-column-two-thirds">
    {% if reference %}
      {{ govukPanel({
        titleText: "Record submitted",
        html: "Booking reference number<br><strong>" + reference + "</strong>"
      }) }}

      <p>The record has been submitted.</p>
      <h2 class="govuk-heading-m">What happens next</h2>
